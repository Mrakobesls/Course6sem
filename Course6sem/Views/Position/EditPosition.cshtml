@using Application.Models.Position
@model EditPositionRequest

<h2>Редактирование должности</h2>

@using (Html.BeginForm("EditPosition", "Position", FormMethod.Post))
{
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        @Html.HiddenFor(m => m.Id)
        <div class="form-group">
            @Html.ValidationMessageFor(m => m.Name)
            @Html.LabelFor(m => m.Name, "Название")
            @Html.EditorFor(m => m.Name)
        </div>
        <div class="form-group">
            <input type="submit" value="Применить" class="btn btn-outline-dark" />
        </div>
    </div>
}
