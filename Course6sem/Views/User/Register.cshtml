@using Application.Models.User
@model RegistrationModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Login, "Введите Login")</label>
            <br />
            @Html.EditorFor(m => m.Login)
            @Html.ValidationMessageFor(m => m.Login)
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Email, "Введите Email")</label>
            <br />
            @Html.EditorFor(m => m.Email)
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Name, "Введите имя")</label>
            <br />
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Surname, "Введите фамилию")</label>
            <br />
            @Html.EditorFor(m => m.Surname)
            @Html.ValidationMessageFor(m => m.Surname)
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Patronymic, "Введите отчество")</label>
            <br />
            @Html.EditorFor(m => m.Patronymic)
            @Html.ValidationMessageFor(m => m.Patronymic)
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.Password, "Введите пароль")</label>
            <br />
            @Html.EditorFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">
            <label>@Html.LabelFor(m => m.ConfirmPassword, "Повторите пароль")</label>
            <br />
            @Html.EditorFor(m => m.ConfirmPassword)
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
        <br />
        <div class="form-group">
            @Html.DropDownListFor(h => h.RoleId,
                new SelectList(ViewBag.Roles, "Id", "Name").OrderBy(x=>x.Text))
        </div>
        <br />
        <div class="form-group">
            @Html.DropDownListFor(h => h.PositionId,
                new SelectList(ViewBag.Positions, "Id", "Name").OrderBy(x=>x.Text))
        </div>
        <br />
        <div>Уровни доступа</div>
        <div>
            @{
                <table class="table legend">
                    @foreach (var accessLevel in ViewBag.AccessLevels)
                    {
                        <tr>
                            <td>
                                <input name="AccessLevelsId" type="checkbox" value="@accessLevel.Id" /> @accessLevel.Name<br />
                            </td>
                        </tr>
                    }
                </table>
            }
        </div>
        <div>
            <input type="submit" value="Зарегистрироваться" class="btn btn-outline-dark" style="margin-top:30px;" />
        </div>
    </div>
</form>