@using Application.Models.User
@model UserListResponse

<div>
    @Html.ActionLink("Зарегистрировать пользователя", "Register", "User", null, new { type = "button", @class = "btn btn-outline-dark" })
</div>
<br />
@using (Html.BeginForm("UpdateUsers", "User", FormMethod.Post))
{
    <div class="text-center">
        <table class="table legend">
            <tr>
                <th>Номер</th>
                <th>Login</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отсчество</th>
                <th>Отключен</th>
            </tr>
            @for (int i = 0; i < Model.Users.Count(); i++)
            {
                @Html.HiddenFor(m => m.Users[i].Id)
                <tr>
                    <td>@i</td>
                    <td>@Model.Users[i].Login</td>
                    <td>@Model.Users[i].Surname</td>
                    <td>@Model.Users[i].Name</td>
                    <td>@Model.Users[i].Patronymic</td>
                    <td>@Html.CheckBoxFor(m => m.Users[i].IsDisabled)</td>
                </tr>
            }
        </table>
    </div>
    <div>
        <input type="submit" value="Обновить" class="btn btn-outline-dark" style="margin-top:30px;" />
    </div>
}